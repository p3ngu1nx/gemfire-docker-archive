#base
docker build -t boriza/gemfire-base .

#Locator
docker build -t boriza/gemfire-locator .
docker run -p 41111:41111 -p 1099:1099 --name locator -dti --add-host dockerhost:192.168.99.100 -d boriza/gemfire-locator 


#Server
docker build -t boriza/gemfire-server .
docker run -p 40404:40404 --name server -dti --add-host dockerhost:192.168.99.100 -d boriza/gemfire-server 


#Client
docker build -t boriza/gemfire-client .
docker run --name client -dti --add-host dockerhost:192.168.99.100 -d boriza/gemfire-client

#tmp
docker run -dit ubuntu
docker port locator


#gemfire
gfsh connect --locator=localhost[41111] 
gfsh connect --locator=192.168.0.132[41111]

connect --locator=locatorhost[41111] 
connect --jmx-manager=dockerhost[1099]

docker push boriza/gemfire-base

#start consumer only
docker-compose -f docker-compose.yml -f quickstart/docker-compose.yml run consumer /bin/bash
docker-compose run server /bin/bash
